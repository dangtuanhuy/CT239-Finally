@model IEnumerable<WebEcommerce.Models.Branch>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Branches")" class="btn btn-info">
        <i class="fa fa-floppy-o"></i>
        <span>

        </span>
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BranchName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchDetails)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee.EmployeePass)
                </th>
                <th></th>
            </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeePass)
                </td>
                <td align="center">
                    <a href="@Url.Action("Edit", "Branches", new { id = item.BranchId })" class="btn btn-success">
                        <i class="fa fa-flash"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Details", "Branches", new { id = item.BranchId })" class="btn btn-primary">
                        <i class="fa fa-list-alt"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "Branches", new { id = item.BranchId })" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>