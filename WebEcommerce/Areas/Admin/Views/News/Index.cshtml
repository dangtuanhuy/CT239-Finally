@model IEnumerable<WebEcommerce.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "News")" cla class="btn btn-info">
        <i class="fa fa-floppy-o"></i>
        <span>

        </span>
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewTitles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsImgs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.EmployeePass)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NewTitles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsImgs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeePass)
                </td>
                <td align="center">
                    <a href="@Url.Action("Edit", "News", new { id = item.NewsId })" class= class="btn btn-success">
                        <i class="fa fa-flash"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Details", "News", new { id = item.NewsId })" class= class="btn btn-primary">
                        <i class="fa fa-list-alt"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "News", new { id = item.NewsId })" class= class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>